# GCP Cloud Run 環境變數範本
# 複製此文件並根據您的 GCP 設定修改

# 應用程式設定
PORT=8080
GIN_MODE=release
APP_ENV=production

# 資料庫設定 (使用 Cloud SQL 或外部資料庫)
DB_HOST=your-cloud-sql-ip
DB_PORT=5432
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=breast_implant_warranty
DB_SSLMODE=require

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 郵件設定 (Mailgun)
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_FROM_EMAIL=noreply@your-domain.com

# 應用程式 URL
APP_URL=https://your-cloudrun-service-url

# 日誌設定
LOG_LEVEL=info
LOG_FORMAT=json

# 安全設定
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Cloud Run 特定設定
CLOUD_RUN_SERVICE=breast-implant-warranty
CLOUD_RUN_REGION=asia-east1
